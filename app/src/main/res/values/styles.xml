<resources>
    <!-- Base application theme. -->
    <style name="AppMaterialTheme" parent="SuperMaterialTheme">

    </style>


    <!-- API all devices. -->
    <style name="SuperMaterialTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="colorControlHighlight">@color/colorGray</item>
        <item name="colorControlActivated">#363f45</item>
        <item name="colorButtonNormal">#FFF</item>

    </style>

    <!-- theme for the pop up Menu. -->
    <style name="PopupTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:background">@color/white</item>
        <item name="android:textColorPrimary">@color/colorLightDark</item>
    </style>

    <!--Tab Size-->
    <style name="MyTabSize" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="MyTabCaps" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="textAllCaps">false</item>
      
    </style>
    <!-- theme for tool bar. -->
    <style name="ToolBarTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>

    </style>


    <style name="RatingBar" parent="Widget.AppCompat.RatingBar.Small">
        <item name="colorControlActivated">@android:color/holo_orange_dark</item>

    </style>

    <style name="RatingBarLarge" parent="Widget.AppCompat.RatingBar.Indicator">
        <item name="colorControlActivated">@android:color/holo_orange_dark</item>

    </style>

</resources>
